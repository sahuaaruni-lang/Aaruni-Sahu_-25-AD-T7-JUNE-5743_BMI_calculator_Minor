<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="BMI Calculator"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Height Unit"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/heightUnitGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/unitCm" android:text="cm" android:checked="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/unitFtIn" android:text="ft-in"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <EditText
            android:id="@+id/heightCm"
            android:hint="Height (cm)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/heightFt"
                android:hint="Feet"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/heightIn"
                android:hint="Inches"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="Weight Unit"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/weightUnitGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/unitKg" android:text="kg" android:checked="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/unitLb" android:text="lb"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <EditText
            android:id="@+id/weightInput"
            android:hint="Weight"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/calcBtn"
                android:text="Calculate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Space android:layout_width="12dp" android:layout_height="1dp"/>
            <Button
                android:id="@+id/resetBtn"
                android:text="Reset"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/resultText"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
